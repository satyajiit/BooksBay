<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>


    <style name="rb" parent="Widget.AppCompat.RatingBar.Small">

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:secondaryProgressTint">#fff</item>

    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarDivider">@color/white</item>

    </style>





    <style name="fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">


        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="navStyle">

        <item name="android:fontFamily">@font/cav</item>

    </style>


    <style name="tbar">

        <item name="android:textColorHint">#616161</item>
        <item name="android:fontFamily">@font/cav</item>

    </style>

    <style name="MineCustomTabText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/cav</item></style>




</resources>
