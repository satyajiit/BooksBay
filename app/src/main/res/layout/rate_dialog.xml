<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="@dimen/padding_10"
    app:cardElevation="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/padding_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:paddingBottom="@dimen/padding_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"/>


    <TextView
        android:id="@+id/rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_tv"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="@dimen/padding_10"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cav"/>


    <RatingBar
        android:id="@+id/rate_bar"
        android:layout_below="@id/border"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:stepSize="1"
        android:layout_centerHorizontal="true"
        android:numStars="5"/>

<Button
    android:id="@+id/rate_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/rate_bar"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/padding_10"
    android:foreground="?android:attr/selectableItemBackground"
    android:textColor="@color/white"
    android:fontFamily="@font/cav"
    android:background="@color/colorPrimary"
   android:layout_margin="@dimen/padding_10"
    android:text="@string/rate_btn"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>