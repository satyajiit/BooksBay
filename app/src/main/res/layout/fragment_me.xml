<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MeFragment">


   <RelativeLayout
       android:background="#1AE3F2FD"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <TextView
           android:layout_marginTop="20dp"
           android:id="@+id/sign_in_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/sign_in"
           android:fontFamily="@font/cav"
           android:textSize="35sp"
           android:padding="25dp"
           android:textColor="@color/black"/>









       <ImageView
           android:layout_toEndOf="@id/sign_in_tv"
           android:layout_alignParentEnd="true"
           android:id="@+id/user_profile_pic"
           android:layout_marginStart="115dp"
           android:layout_width="wrap_content"
           android:layout_height="78dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/user_ic"/>



       <LinearLayout
           android:layout_marginTop="25dp"
           android:layout_below="@id/user_profile_pic"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:id="@+id/love_this_app_crd"
               android:animateLayoutChanges="true"
               android:layout_width="match_parent"
               app:cardElevation="5dp"
               app:cardUseCompatPadding="true"
               android:layout_height="wrap_content"
               app:cardCornerRadius="5dp"
               android:layout_margin="1dp">



                   <LinearLayout
                       android:id="@+id/clicker_love_this_app_crd"
                       android:clickable="true"
                       android:focusable="true"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:textColor="@color/black"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/cav"
                           android:text="@string/i_love_this_app"
                           android:padding="20dp"
                           android:textSize="18sp"/>
                       <View
                           android:layout_width="0dp"
                           android:layout_height="0dp"
                           android:layout_weight="1"
                           />
                       <ImageView
                           android:paddingEnd="10dp"
                           android:paddingStart="10dp"
                           android:padding="20dp"
                           android:layout_gravity="end"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_like"/>

                   </LinearLayout>



           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/share_with_frnds_crd"
               android:animateLayoutChanges="true"
               android:layout_width="match_parent"
               app:cardElevation="5dp"
               app:cardUseCompatPadding="true"
               android:layout_height="wrap_content"
               app:cardCornerRadius="5dp">



               <LinearLayout
                    android:id="@+id/share_with_frnds_lin"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView

                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/cav"
                       android:text="@string/share_with_frnds"
                       android:padding="20dp"
                       android:textSize="18sp"/>
                   <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       />
                   <ImageView

                       android:paddingEnd="10dp"
                       android:paddingStart="10dp"
                       android:padding="20dp"
                       android:layout_gravity="end"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_share_with_frnds"/>

               </LinearLayout>



           </androidx.cardview.widget.CardView>













           <androidx.cardview.widget.CardView
               android:id="@+id/about_us_crd"
               android:animateLayoutChanges="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="5dp"
               app:cardElevation="5dp"
               app:cardUseCompatPadding="true">



               <LinearLayout
                   android:id="@+id/aboutUsLin"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView

                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/cav"
                       android:text="@string/about_us"
                       android:padding="20dp"
                       android:textSize="18sp"/>
                   <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       />
                   <ImageView

                       android:paddingEnd="10dp"
                       android:paddingStart="10dp"
                       android:padding="20dp"
                       android:layout_gravity="end"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_about_us"/>

               </LinearLayout>



           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:visibility="gone"
               android:id="@+id/logOut_crd"
               android:animateLayoutChanges="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="5dp"
               app:cardElevation="5dp"
               app:cardUseCompatPadding="true">



               <LinearLayout

                   android:id="@+id/logOut_lin"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView

                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/cav"
                       android:text="@string/logout"
                       android:padding="20dp"
                       android:textSize="18sp"/>
                   <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       />
                   <ImageView

                       android:paddingEnd="10dp"
                       android:paddingStart="10dp"
                       android:padding="20dp"
                       android:layout_gravity="end"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_person_black_24dp"/>

               </LinearLayout>



           </androidx.cardview.widget.CardView>


       </LinearLayout>




   </RelativeLayout>

</FrameLayout>